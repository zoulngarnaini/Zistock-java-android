<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F1C1C"
    tools:context=".outils">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:backgroundTint="#A85151"
            android:onClick="inventaire"
            android:text="Inventaire" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#C66868"
            android:onClick="recu"
            android:text="Recu" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:backgroundTint="#AC5858"
            android:onClick="calculatrice"
            android:text="Calculatrice" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>